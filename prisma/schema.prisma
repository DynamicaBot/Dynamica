// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../config/db.sqlite"
}

model Guild {
  id        String @id @unique
  primaryChannels  Primary[]
  secondaryChannels  Secondary[]
  aliases Alias[] @relation("AliasOnGuild")
}

model Primary {
  id String @id @unique
  creator String
  template String @default("@@game@@ ##")
  generalName String @default("General ##")
  secondaries Secondary[] @relation("SecondaryOnPrimary")
  guildId String?
  guild Guild? @relation(references: [id], fields: [guildId])
}

model Secondary {
  id String @id @unique
  name String?
  creator String?
  guildId String
  guild Guild @relation(references: [id], fields: [guildId])
  primaryId String
  primary Primary @relation(name: "SecondaryOnPrimary", fields: [primaryId], references: [id])
}

model Alias {
  id Int @id @default(autoincrement())
  activity String
  alias String
  guildId String?
  guild Guild? @relation(name: "AliasOnGuild", fields: [guildId], references: [id])
}
