// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../config/db.sqlite"
}

model Primary {
  id String @id @unique
  creator String
  template String @default("@@game@@ ##")
  generalName String @default("General ##")
  secondaries Secondary[] @relation("SecondaryOnPrimary")
  aliases Alias[] @relation("AliasOnPrimary")
}

model Secondary {
  id String @id @unique
  name String?
  primaryId String
  primary Primary @relation(name: "SecondaryOnPrimary", fields: [primaryId], references: [id])
}

model Alias {
  id Int @id @default(autoincrement())
  activity String
  alias String
  primaryId String
  primary Primary @relation(name: "AliasOnPrimary", fields: [primaryId], references: [id])
}
