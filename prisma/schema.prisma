generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../config/db.sqlite"
}

model PrimaryChannel {
  id String @id @unique
  creator String
  template String? 
  generalName String?
  secondaries Secondary[] @relation("SecondaryOnPrimaryChannel")
}

model Secondary {
  id String @id @unique
  name String?
  primaryChannelId String
  primaryChannel PrimaryChannel @relation(name: "SecondaryOnPrimaryChannel", fields: [primaryChannelId], references: [id])
}
